body{
    background: #F5F5F5;
}
.main {
    margin-top: 50px;
}

.navigation {
    width: 100%;
    /*height: 5%;*/
    background: #ff5400;
    padding: 2% 0;
}

.carousel-inner > .item > img,
.carousel-inner > .item > a > img {
    width: 100% !important;
}

.main .round_mark {
    margin-top: 11%;
}
.new{
    background: #fff;
    font-size: 3%;
    font-weight: normal;
    color: #666;
    margin: 0 auto;
    border-bottom: 3px solid #ECECEC;
}
.hot{
    background: #fff;
    margin-top: 3%;
    padding-bottom: 3%;
    border-bottom: 3px solid #ECECEC;
}
.hot h2{
    border-left: 5px solid #ff5400;
    padding-left: 20px;
    font-size: 2em;
    color: #666;
    font-weight: normal;
}

.hot_img01 {
    width: 100% !important;
    height: auto;
}

.hot_img02 {
    width: 100% !important;
    margin-bottom:3.5%;
    height: auto;
}

.hot_img03 {
    width: 100% !important;
